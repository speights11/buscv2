{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard", "prettier"],
  "overrides": [
    {
      "files": ["**/*.spec.js", "**/*.test.js"],
      "env": {
        "jest": true
      },
      "rules": { "spaced-comment": "off" }
    }
  ],
  "rules": { "spaced-comment": "off" },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaFeatures": {
      "jsx": true
    },
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react"],
  "ignorePatterns": "*.spec.js"
}
